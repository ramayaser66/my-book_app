<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css"
        integrity="sha512-HK5fgLBL+xu6dm/Ii3z4xhlSUyZgTT9tuc/hSrtw6uzJOvgRr2a9jyxxT1ely+B+xFAmJKVSTbpM/CuL7qxO8w=="
        crossorigin="anonymous" />

    <link rel="stylesheet" href="/styles/style.css">

    <style>
        body {font-family: Arial, Helvetica, sans-serif;}
        * {box-sizing: border-box;}
        
        /* Button used to open the contact form - fixed at the bottom of the page */
        .open-button {
          background-color: #555;
          color: white;
          padding: 16px 20px;
          border: none;
          cursor: pointer;
          opacity: 0.8;
          /* position: fixed; */
          bottom: 23px;
          right: 28px;
          width: 280px;
          margin-left: 10px;
        }
        
        /* The popup form - hidden by default */
        .form-popup {
          display: none;
          position: fixed;
          bottom: 0;
          right: 15px;
          /* border: 3px solid #f1f1f1; */
          z-index: 9;
          width:80%;
          height: 100vh;
        }
        
        /* Add styles to the form container */
        .form-container {
          max-width: 100%;
          height: 90vh;
          padding: 10px;
          background-color: white;
          margin-top: 2%;
        }
        
        /* Full-width input fields */
        .form-container input[type=text], .form-container input[type=password]{
          width: 70%;
          padding: 15px;
         
          margin-left:auto;
          margin-right: auto;
          margin-top: 1%;
          margin-bottom: 3%;
          /* margin: 20px 0 22px 0; */
          
          border: none;
          background: #f1f1f1;
        }

        .textArea{
            width: 70%;
          padding: 15px;
         
          margin-left: 15%;
          margin-right: auto;
          margin-top: 1%;
          margin-bottom: 1%;
          border: none;
          background: #f1f1f1;

        }
        
        /* When the inputs get focus, do something */
        .form-container input[type=text]:focus, .form-container input[type=password]:focus {
          background-color: #ddd;
          outline: none;
        }
        
        /* Set a style for the submit/login button */
        .form-container .btn {
          background-color: #4CAF50;
          color: white;
          padding: 16px 20px;
          border: none;
          cursor: pointer;
          width: 70%;
          margin-bottom:10px;
          opacity: 0.8;
          margin-left: 15%;
        }
        
    
        
        /* Add some hover effects to buttons */
        .form-container .btn:hover, .open-button:hover {
          opacity: 1;
        }

        .delete-form{
           background-color: #555;
          color: white;
          padding: 16px 20px;
          border: none;
          cursor: pointer;
          opacity: 0.8;
          /* position: fixed; */
          bottom: 23px;
          right: 28px;
          width: 280px;
        }

        .display-button{
display: flex;
        }
        </style>

</head>

<body>
    <header>
        <a href="/searches/new">Add a New Book</a>
        <a href="/">Home</a>
    </header>
    <ul>
        <li class="renderedList">
            <img src="<%= book.image %>">
            <h2>
                <%=book.title %>
            </h2>
            <h3>
                <%=book.authors%>
            </h3>
            <p>
                <%=book.decr%>
            </p>
            <h4>
                <%=book.isbn%>
            </h4>
            <p>
                <%=book.bookshelf%>
            </p>
            <div class="display-button">
                <form action="/books/<%= book.id %>?_method=DELETE" method="POST" >
                    <input id="deleteButton" type="submit" value="delete" class="delete-form">
            
                </form>
            
            
                <button class="open-button" onclick="openForm()">Update</button>
            </div>
            
        </li>
        
    
    </ul>


    <form action="" method="">
        <input type="hidden" name="image" value="<%= book.image%>">
        <input type="hidden" name="title" value="<%= book.title%>">
        <input type="hidden" name="authors" value="<%= book.authors%>">
        <input type="hidden" name="decr" value="<%= book.decr%>">
        <input type="hidden" name="isbn" value="<%= book.isbn%>">
        <!-- <input id="seachButton" type="submit" value="Add to Database"> -->
    </form>


  




<div class="form-popup" id="myForm">
  <form action="/books/<%= book.id %>?_method=PUT"  method="POST" class="form-container">

    <input type="text" name="image" value="<%= book.image%>">
    <input type="text" name="title" value="<%= book.title%>">
    <input type="text" name="authors" value="<%= book.authors%>">
    <textarea class="textArea" rows=4 cols=50 name=decr>
    <%= book.decr%>
</textarea>
    <!-- <input type="text" name="decr" value="<%= book.decr%>"> -->
    <input type="text" name="isbn" value="<%= book.isbn%>">
    <input id="updateButton"  class="btn" type="submit" value="Update">
    <!-- <button type="button" class="btn" onclick="closeForm()">Close</button> -->
  </form>
</div>


<script>
    function openForm() {
      document.getElementById("myForm").style.display = "block";
    }
    
    function closeForm() {
      document.getElementById("myForm").style.display = "none";
    }
    </script>





    <footer>
        <ul>
            <li> <i class="fas fa-circle"></i></li>
            <li> <i class="fas fa-circle"></i></li>
            <li> <i class="fas fa-circle"></i></li>
            <li> <i class="fas fa-circle"></i></li>
        </ul>
    </footer>
</body>

</html>